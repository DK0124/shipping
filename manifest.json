{
  "manifest_version": 3,
  "name": "BV SHOP 出貨助手",
  "version": "5.4.0",
  "description": "BV SHOP 出貨標籤列印輔助工具",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*:///.bvshop-manage.bvshop.tw/*",
    "*://*.7-11.com.tw/*",
    "*://*.family.com.tw/*",
    "*://*.hilife.com.tw/*",
    "*://*.okmart.com.tw/*",
    "*://*.kerrytj.com/*",
    "*://*.hct.com.tw/*",
    "*://*.t-cat.com.tw/*",
    "*://*.global-business.com.tw/*",
    "*://*.fedex.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*:.https://bvshop-manage.bvshop.tw/order_print*",
        "*://*.7-11.com.tw/*",
        "*://*.family.com.tw/*",
        "*://*.hilife.com.tw/*",
        "*://*.okmart.com.tw/*",
        "*://*.kerrytj.com/*",
        "*://*.hct.com.tw/*",
        "*://*.t-cat.com.tw/*",
        "*://*.global-business.com.tw/*",
        "*://*.fedex.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "pdf.js",
      "pdf.worker.js",
      "html2canvas.min.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
