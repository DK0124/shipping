{
  "manifest_version": 3,
  "name": "BV SHOP 出貨助手",
  "version": "5.0.0",
  "description": "BV SHOP 出貨標籤列印輔助工具 - 支援 A4 轉 10×15cm 標籤格式、整合物流單列印",
  "author": "DK0124",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.bvshop.com/*",
    "*://*.7-11.com.tw/*",
    "*://*.family.com.tw/*",
    "*://*.hilife.com.tw/*",
    "*://*.okmart.com.tw/*",
    "*://*.kerrytj.com/*",
    "*://*.hct.com.tw/*",
    "*://*.t-cat.com.tw/*",
    "*://*.global-business.com.tw/*",
    "*://*.fedex.com/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://*.bvshop.com/*",
        "*://*.7-11.com.tw/*",
        "*://*.family.com.tw/*",
        "*://*.hilife.com.tw/*",
        "*://*.okmart.com.tw/*",
        "*://*.kerrytj.com/*",
        "*://*.hct.com.tw/*",
        "*://*.t-cat.com.tw/*",
        "*://*.global-business.com.tw/*",
        "*://*.fedex.com/*"
      ],
      "js": [
        "lib/pdf.js",
        "content.js"
      ],
      "css": [],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "lib/pdf.worker.js",
        "lib/pdf.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "BV SHOP 出貨助手"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "minimum_chrome_version": "88"
}
