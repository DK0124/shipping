{
  "manifest_version": 3,
  "name": "BV SHOP 標籤機-出貨明細",
  "description": "轉換出貨明細為10×15cm標籤格式，支援物流單整合列印",
  "version": "3.0.0",
  "author": "Derek Yu",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://bvshop-manage.bvshop.tw/*",
        "*://*.bvshop.tw/*",
        "*://*.7-11.com.tw/*",
        "*://*.family.com.tw/*",
        "*://*.famiport.com.tw/*",
        "*://*.hilife.com.tw/*",
        "*://*.okmart.com.tw/*",
        "*://*.kerrytj.com/*"
      ],
      "js": ["pdf.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.js", "pdf.js"],
      "matches": ["<all_urls>"]
    }
  ]
}